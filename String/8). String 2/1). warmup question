//warmup problem: Input a string and return the number of times the neighbouring characters are different from each other.
#include <iostream>
#include <string>
using namespace std;

int main() {
    string s;
    cin >> s;
    int cnt = 0;
    int n = s.length();

    for (int i = 0; i < n; i++) {
        if (i == 0) { 
            if (n > 1 && s[i] != s[i + 1]) {
                cnt++;
            }
        } else if (i == n - 1) { 
            if (s[i] != s[i - 1]) {
                cnt++;
            }
        } else { 
            if (s[i] != s[i + 1] && s[i] != s[i - 1]) {
                cnt++;
            }
        }
    }

    cout << cnt; 
    return 0;
}
